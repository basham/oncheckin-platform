---
import "@oncheckin/assets/src/style.css";
import favicon from "@oncheckin/assets/dist/favicon.ico";
import logo from "@oncheckin/assets/dist/logo.svg?url";
import appleTouchIcon from "@oncheckin/assets/dist/apple-touch-icon-180x180.png?url";
---

<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta
			name="description"
			content="Membership and event management software for Hash House Harriers."
		>
		<title>OnCheckIn</title>
		<link rel="icon" href={favicon} sizes="48x48">
		<link rel="icon" href={logo} sizes="any" type="image/svg+xml">
		<link rel="apple-touch-icon" href={appleTouchIcon}>
	</head>
	<body>
		<slot />
	</body>
</html>
